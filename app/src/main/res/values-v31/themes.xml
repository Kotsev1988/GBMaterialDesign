        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorOnSecondaryContainer">#8BC34A</item>

        <item name="textInputOutlinedStyle">@style/MyText</item>
        <item name="chipStyle">@style/MyChip</item>
        <item name="editTextStyle">@style/MyText</item>
